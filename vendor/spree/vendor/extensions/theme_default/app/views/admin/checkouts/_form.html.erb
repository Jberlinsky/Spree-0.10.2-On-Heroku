<p>
  <label>Email: </label><%= f.text_field :email %>
</p>

<h3><%= Address.human_name(:count => 2) %></h3>
<% f.fields_for 'bill_address' do |ba_form|  %>
  <%= render :partial => "admin/shared/address_form", :locals => {:f => ba_form, :name => t('billing_address')} %>
<% end %>

<% f.fields_for 'ship_address' do |sa_form|  %>
  <%= render :partial => "admin/shared/address_form", :locals => {:f => sa_form, :name => t('shipping_address')} %>
<% end %>

<p class="form-buttons">
  <%= button @order.in_progress? ? t('continue') : t('update') %>
</p>