<%= render :partial => 'admin/shared/configuration_menu' %>

<% hook :admin_shipping_method_edit_form_header do %>
  <h1><%= t("editing_shipping_method") %></h1>
  <%= error_messages_for :shipping_method %>
<% end %>

<% hook :admin_shipping_method_edit_form do %>
  <% form_for(@shipping_method, :url => object_url, :html => { :method => :put }) do |f| %>
